            <report test="not(matches(@id, '^formula_[\w\.\-_]+$'))" role="warn">
                [FOR_1] <name/> containing a label should have id starting with formula_ current value: <value-of select="@id"/>
            </report>
        </rule>
        <rule context="disp-formula[not(@id)]">
